---
interface Props {
    tag: string;
    variant?: "card" | "detail";
}

const { tag, variant = "detail" } = Astro.props;

// Glassmorphism Style (for Card Overlay)
const cardStyle = `
  inline-flex items-center justify-center
  px-5 py-2 rounded-full
  bg-gray-100 dark:bg-gray-800
  text-xl text-gray-600 dark:text-gray-300 font-medium
  hover:bg-gray-200 dark:hover:bg-gray-700
  transition-all duration-300
  shadow-sm
`;

// Modern Linear Style (for Detail Metadata)
const detailStyle = `
  inline-flex items-center gap-1
  text-base font-medium
  px-5 py-3 rounded-full
  bg-blue-500/10 text-blue-600 dark:text-blue-400
  hover:bg-blue-500/20
  transition-colors duration-200
`;
---

<a href={`/tags/${tag}/`} class={variant === "card" ? cardStyle : detailStyle}>
    {variant === "detail" && <span class="opacity-60 text-lg">#</span>}
    {tag}
</a>
