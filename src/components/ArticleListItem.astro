---
import FormattedDate from "./FormattedDate.astro";
import TagBadge from "./TagBadge.astro";

interface Props {
    title: string;
    url: string;
    date: Date;
    tags?: string[];
    heroImage?: string;
}

const { title, url, date, tags = [], heroImage } = Astro.props;
---

<div
    class="group relative rounded-2xl overflow-hidden bg-white dark:bg-black/40 border border-zinc-200 dark:border-zinc-800 shadow-sm hover:shadow-xl transition-all duration-300 h-64"
>
    {/* Layer 1: Image (Full Width Backdrop) */}
    {
        heroImage && (
            <div class="absolute inset-0 z-0 transition-transform duration-700 group-hover:scale-105">
                <img src={heroImage} alt="" class="w-full h-full object-cover object-center" />
            </div>
        )
    }

    {
        /* Layer 2: Extended Gradient Overlay (Cinematic Fade) 
        Formula: 0-30% solid, 60% semi-transparent, 100% transparent
    */
    }
    <div
        class="absolute inset-0 z-0 pointer-events-none bg-gradient-to-r from-white via-white/100 to-transparent dark:from-gray-950 dark:via-gray-950/90 dark:to-transparent"
        style="background: linear-gradient(to right, var(--card-bg, theme('colors.white')) 0%, var(--card-bg, theme('colors.white')) 30%, var(--card-bg, theme('colors.white') / 0.6) 60%, transparent 100%);"
    >
        {
            /* Dark Mode Overlay Override using Tailwind for easier adaptability if CSS vars aren't perfect.
           We'll use a strong tailwind gradient that roughly matches the request.
           from-gray-950 (0%) -> via-gray-950 (30-ish%) -> to-transparent
           Tailwind 'via' is usually 50%, so we can stack gradients or just use arbitrary values.
        */
        }
    </div>

    {/* Tailwind implementation of the gradient for reliable dark/light switching */}
    <div
        class="absolute inset-0 z-0 pointer-events-none bg-gradient-to-r from-white from-30% via-white/60 via-60% to-transparent dark:from-gray-950 dark:from-30% dark:via-gray-950/60 dark:via-60% dark:to-transparent"
    >
    </div>

    {/* Layer 3: Relaxed Content Overlay */}
    <article class="relative z-10 flex flex-col justify-center h-full p-8 pr-20 w-full">
        {/* Date / Meta */}
        <div class="flex items-center gap-2 text-sm text-gray-500 dark:text-gray-400 mb-2 font-mono drop-shadow-sm">
            <FormattedDate date={date} />
        </div>

        {/* Title */}
        <h2
            class="text-2xl font-bold text-gray-900 dark:text-white mb-3 leading-relaxed group-hover:text-primary-600 dark:group-hover:text-primary-400 transition-colors drop-shadow-md"
        >
            <a href={url} class="block">
                {title}
            </a>
        </h2>

        {/* Excerpt - Optional, user implied focusing on Title/Image, but kept strictly if slot exists. */}
        {
            Astro.slots.default && (
                <p class="text-gray-600 dark:text-gray-300 mb-6 line-clamp-2 leading-relaxed max-w-[85%] drop-shadow-sm">
                    <slot />
                </p>
            )
        }

        {/* Tags (Solid Pill Style) */}
        {
            tags.length > 0 && (
                <div class="flex flex-wrap gap-2 mt-auto">
                    {tags.map(tag => (
                        <TagBadge tag={tag} variant="card" />
                    ))}
                </div>
            )
        }
    </article>
</div>
