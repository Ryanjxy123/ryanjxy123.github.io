---
interface Props {
    date: Date;
    class?: string;
}

const { date, class: className = "" } = Astro.props;
---

<time datetime={date.toISOString()} class={className}
    >{
        `${date.getFullYear()}-${String(date.getMonth() + 1).padStart(2, "0")}-${String(date.getDate()).padStart(2, "0")}`
    }</time
>
